# /etc/default/naboom â€” sample
# Redis (ACL users)
REDIS_APP_USER=app
REDIS_APP_PASSWORD=REPLACE_ME
REDIS_APP_HOST=127.0.0.1
REDIS_APP_PORT=6379
REDIS_APP_DB=0

REDIS_CHANNELS_USER=channels
REDIS_CHANNELS_PASSWORD=REPLACE_ME
REDIS_CHANNELS_DB=1

REDIS_CELERY_USER=celery
REDIS_CELERY_PASSWORD=REPLACE_ME
REDIS_CELERY_DB=2

# PostgreSQL
DATABASE_URL=postgresql://user:REPLACE_ME@127.0.0.1:5432/naboom

# MQTT
MQTT_USER=websocket
MQTT_PASSWORD=REPLACE_ME
MQTT_TCP_HOST=127.0.0.1
MQTT_TCP_PORT=1883
MQTT_WS_PATH=/mqtt
MQTT_TOPICS=events/#,alerts/#

# Gunicorn/Daphne autosizing
GUNICORN_PROFILE=io
GUNICORN_WORKERS=auto
GUNICORN_THREADS=auto
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100

DAPHNE_INSTANCES=auto
DAPHNE_BASE_PORT=9000

# Celery autosizing
CELERY_PROFILE=io
CELERY_CONCURRENCY=auto
CELERY_PREFETCH_MULTIPLIER=auto
CELERY_MAX_TASKS_PER_CHILD=1000
